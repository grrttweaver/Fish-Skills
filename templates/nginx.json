[
  {
    "name": "${app_name}",
    "image": "${app_image}",
    "cpu": ${fargate_cpu},
    "memory": ${fargate_memory},
    "networkMode": "awsvpc",
    "portMappings": [
      {
        "containerPort": ${app_port},
        "hostPort": ${app_port}
      }
    ],
    "logConfiguration": {
        "logDriver": "awsfirelens",
        "options": {
          "Name": "es",
          "Host": "${host}",
          "Port": "80",
          "Aws_Auth": "On",
          "Aws_Region": "${aws_region}",
          "tls": "On",
          "Logstash_Format": "true",
          "Logstash_Prefix": "${service_name}"
        }
     }
  }
]
